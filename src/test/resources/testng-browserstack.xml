<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BrowserStack Suite" parallel="tests" thread-count="5">
    <test name="Chrome Latest Windows">
        <parameter name="os" value="Windows"/>
        <parameter name="osVersion" value="11"/>
        <parameter name="browser" value="Chrome"/>
        <parameter name="browserVersion" value="latest"/>
        <classes>
            <class name="org.browserstack.tests.OpinionScraperTest"/>
        </classes>
    </test>
    <test name="Firefox Latest Mac">
        <parameter name="os" value="OS X"/>
        <parameter name="osVersion" value="Ventura"/>
        <parameter name="browser" value="Firefox"/>
        <parameter name="browserVersion" value="latest"/>
        <classes>
            <class name="org.browserstack.tests.OpinionScraperTest"/>
        </classes>
    </test>
    <test name="Edge Windows">
        <parameter name="os" value="Windows"/>
        <parameter name="osVersion" value="10"/>
        <parameter name="browser" value="Edge"/>
        <parameter name="browserVersion" value="latest"/>
        <classes>
            <class name="org.browserstack.tests.OpinionScraperTest"/>
        </classes>
    </test>
    <test name="Safari Mac">
        <parameter name="os" value="OS X"/>
        <parameter name="osVersion" value="Monterey"/>
        <parameter name="browser" value="Safari"/>
        <parameter name="browserVersion" value="latest"/>
        <classes>
            <class name="org.browserstack.tests.OpinionScraperTest"/>
        </classes>
    </test>
    <test name="Mobile Chrome Android">
        <parameter name="os" value="Android"/>
        <parameter name="osVersion" value="12.0"/>
        <parameter name="browser" value="Chrome"/>
        <parameter name="browserVersion" value="latest"/>
        <classes>
            <class name="org.browserstack.tests.OpinionScraperTest"/>
        </classes>
    </test>
</suite>
